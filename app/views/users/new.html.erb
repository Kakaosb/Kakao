<h1>Новый пользователь</h1>


<%= form_for :user, url: users_path do |f| %>
  <p>
    <%= f.label :Ник %><br>
    <%= f.text_field :nick %>
  </p>
 
  <p>
    <%= f.label :Логин %><br>
    <%= f.text_field :login %>
  </p>

 <p>
    <%= f.label :Email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :Пароль %><br>
    <%= f.text_field :password_digest %>
  </p>

   <p>
    <%= f.label :Повторите_пароль %><br>
    <%= f.text_field :password_confirmation %>
  </p>


  <p>
    <%= f.submit :Зарегистрироваться %>
  </p>
<% end %>